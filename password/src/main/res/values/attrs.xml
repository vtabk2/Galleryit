        <attr name="otpLength" format="integer"/>
        <attr name="boxHeight" format="dimension"/>
        <attr name="boxWidth" format="dimension"/>
        <attr name="boxSpacing" format="dimension"/>
        <attr name="boxCornerRadius" format="dimension"/>
        <attr name="boxStrokeWidth" format="dimension"/>

        <attr name="boxColor" format="color"/>
        <attr name="boxColorActive" format="color"/>
        <attr name="boxColorError" format="color"/>
        <attr name="boxColorSuccess" format="color"/>
        <attr name="boxTextColor" format="color"/>

        <attr name="underlineHeight" format="dimension"/>
