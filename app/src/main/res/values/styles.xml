<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubscriptionCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ActionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ActionIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ActionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="TextInSetting">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:background">@drawable/core_bg_text_setting</item>
    </style>

    <style name="SpaceItem">
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:layout_width">@dimen/_1dp</item>
    </style>

    <style name="TextHome">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/_12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
    </style>

    <style name="DefaultIcon">
        <item name="android:layout_width">@dimen/_32dp</item>
        <item name="android:layout_height">@dimen/_32dp</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="IconOnActionBar">
        <item name="android:layout_width">@dimen/_32dp</item>
        <item name="android:layout_height">@dimen/_32dp</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/bg_ripple_transparent_oval</item>
    </style>

    <style name="DotIndicator">
        <item name="android:layout_width">@dimen/_25dp</item>
        <item name="android:layout_height">@dimen/_10dp</item>
        <item name="android:background">@drawable/core_indicator_intro_selector</item>
    </style>

    <style name="MenuItemStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MenuIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="MenuTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RatioButtonFeedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingEnd">@dimen/_5dp</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:textColor">@color/core_text_primary_dark</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lineSpacingExtra">@dimen/_5dp</item>
    </style>

    <style name="TextAppearance.Roboto.Base" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Roboto.Medium" parent="TextAppearance.Roboto.Base">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text_Security_Error" parent="TextAppearance.Roboto.Medium">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">#FA5671</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>