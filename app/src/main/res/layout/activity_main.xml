<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f9">

    <com.core.baseui.toolbar.CoreToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:ctv_tv_title="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/customTabLayoutView"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <com.codebasetemplate.features.app.customview.CustomTabLayoutView
        android:id="@+id/customTabLayoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ctl_background="@android:color/white"
        app:ctl_indicator_color="@color/color_selected"
        app:ctl_indicator_size="min"
        app:ctl_item_margin_vertical="5dp"
        app:ctl_number_item_in_screen="3"
        app:ctl_show_background_item="false"
        app:ctl_show_indicator="true"
        app:ctl_text_color_selected="@android:color/black"
        app:ctl_text_size="18sp"
        app:layout_constraintBottom_toTopOf="@id/layoutAds"/>

    <FrameLayout
        android:id="@+id/layoutAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.core.ads.customviews.ads.BannerNativeContainerLayout
            android:id="@+id/layout_banner_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>