<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        style="@style/Title18Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/core_bg_item_language"
        android:gravity="right"
        android:paddingStart="@dimen/_20dp"
        android:id="@+id/tvLanguage"
        android:paddingEnd="@dimen/_20dp"
        android:textColor="@color/core_color_language_selector"
        android:paddingVertical="@dimen/_13dp"
        tools:text="مرحبًا" />

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/DefaultIcon"
        android:id="@+id/ivChecked"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/_10dp"
        android:src="@drawable/core_ic_radio" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_50dp"
        android:id="@+id/lottieView"
        android:layout_gravity="center"
        android:scaleX="1.3"
        android:layout_marginTop="@dimen/_8dp"
        android:scaleY="1.3"
        app:lottie_rawRes="@raw/click"
        app:lottie_loop="true"
        android:visibility="visible"
        android:layout_height="@dimen/_50dp"/>
</FrameLayout>
