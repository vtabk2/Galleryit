    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_13dp"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/core_appColor" android:width="@dimen/_1_5dp"/>
