    <style name="AdsNotificationViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gnt_rounded_corners_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Ad</item>
        <item name="android:minWidth">@dimen/_16dp</item>
        <item name="android:minHeight">@dimen/_16dp</item>
        <item name="android:paddingStart">@dimen/_4dp</item>
        <item name="android:paddingTop">@dimen/_2dp</item>
