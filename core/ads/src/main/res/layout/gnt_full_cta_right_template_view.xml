<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorPrimary">

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/media_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@drawable/core_bg_native_ads"
            android:paddingBottom="@dimen/_12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ad_notification_view"
                style="@style/AdsNotificationViewStyle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <FrameLayout
                android:id="@+id/containerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/primary"
                android:layout_alignBottom="@+id/body"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_14dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/_52dp"
                    android:layout_height="@dimen/_52dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible"/>
            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/primary"
                style="@style/AdsTitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_notification_view"
                android:layout_marginEnd="@dimen/_7dp"
                android:layout_toStartOf="@+id/layout_cta"
                android:layout_toEndOf="@+id/containerIcon"
                tools:text="Test AD : Flood-It!"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/body"
                style="@style/AdsBodyTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary"
                android:layout_alignStart="@+id/primary"
                android:layout_alignEnd="@+id/primary"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center_vertical"
                android:lines="2"
                tools:text="Install Flood-It App for free! Free Popurlar Casual Game "/>

            <FrameLayout
                android:id="@+id/layout_cta"
                style="@style/CtaCardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_14dp"
                app:cardCornerRadius="@dimen/native_cta_right_radius">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cta"
                    style="@style/CtaRightViewStyle"
                    tools:background="@color/colorPrimary"
                    tools:text="Cài đặt"/>
            </FrameLayout>
        </RelativeLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
</merge>