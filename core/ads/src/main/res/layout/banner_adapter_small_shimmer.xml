<?xml version="1.0" encoding="utf-8"?>
<com.core.ads.customviews.view.AspectRatioShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:AspectRatioShimmerLayout_ratio="0.16">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/containerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_46dp"
                android:layout_height="@dimen/_46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_8dp"
                android:background="@color/shimmer_bg"
                android:scaleType="fitCenter"
                android:visibility="visible" />
        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/primary"
            style="@style/AdsTitleTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginEnd="@dimen/_7dp"
            android:layout_toStartOf="@+id/layout_cta"
            android:layout_toEndOf="@+id/containerIcon"
            android:background="@color/shimmer_bg"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_14dp"
            android:textStyle="normal"
            tools:text="" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/body"
            style="@style/AdsBodyTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primary"
            android:layout_alignStart="@+id/primary"
            android:layout_alignEnd="@+id/primary"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginBottom="@dimen/_3dp"
            android:background="@color/shimmer_bg"
            android:gravity="center_vertical"
            android:lines="2"
            android:textSize="@dimen/_12dp"
            tools:text="" />

        <FrameLayout
            android:id="@+id/layout_cta"
            style="@style/CtaCardViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@color/shimmer_bg">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cta"
                style="@style/CtaRightViewStyle"
                android:layout_gravity="center_vertical"
                android:background="@color/shimmer_bg"
                tools:text="" />
        </FrameLayout>
    </RelativeLayout>
</com.core.ads.customviews.view.AspectRatioShimmerLayout>
