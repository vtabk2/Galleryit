<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/core_bg_native_ads">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_5dp">


        <FrameLayout
            android:id="@+id/containerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/primary"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_46dp"
                android:layout_height="@dimen/_46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_8dp"
                android:background="@color/shimmer_bg"
                android:scaleType="fitCenter"
                android:visibility="visible" />

        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/primary"
            style="@style/AdsTitleTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginEnd="@dimen/_7dp"
            android:layout_toStartOf="@+id/frameButton"
            android:layout_toEndOf="@+id/ad_notification_view"
            android:background="@color/shimmer_bg"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_14dp"
            android:textStyle="normal"
            tools:text="Test AD : Flood-It!" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ad_notification_view"
            style="@style/AdsNotificationViewStyle"
            android:layout_alignTop="@+id/primary"
            android:layout_toEndOf="@+id/containerIcon"
            android:background="@drawable/gnt_rounded_shape" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/body"
            style="@style/AdsBodyTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primary"
            android:layout_alignStart="@+id/ad_notification_view"
            android:layout_alignEnd="@+id/primary"
            android:background="@color/shimmer_bg"
            android:gravity="center_vertical"
            android:lines="2"
            android:textSize="@dimen/_12dp"
            tools:text="Install Flood-It App for free! Free Popular Casual Game" />

        <FrameLayout
            android:id="@+id/frameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/primary"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_14dp">

            <FrameLayout
                android:id="@+id/layout_cta"
                style="@style/CtaCardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cta"
                    style="@style/CtaRightSmallViewStyle"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shimmer_bg"
                    tools:text="Install" />
            </FrameLayout>
        </FrameLayout>

    </RelativeLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
